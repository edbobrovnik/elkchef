/usr/local/bin/curator --host <%= node["elasticsearch"]["networkhost"] %> delete indices --older-than <%= node["elk-maintenance-tools"]["keeplogs-n-days"] %>  --time-unit days  --timestring '%d-%m-%Y'  --prefix logs-
